{
  "name": "DevContainer for JAIRO Cloud Groups Manager",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24.12"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "dockerDashComposeVersion": "latest",
      "enableNonRootDocker": true,
      "moby": false
    }
  },
  "remoteEnv": {
    "VIRTUAL_ENV": "/home/vscode/.venv",
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "onCreateCommand": "/bin/sh .devcontainer/setup_commands.sh install_deps",
  "postAttachCommand": "/bin/sh .devcontainer/setup_commands.sh container_watch",

  "customizations": {
    "vscode": {
      "settings": {
        "python.languageServer": "Pylance",
        "[python]": {
          "editor.rulers": [88],
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },

        "[typescript]": {
          "editor.rulers": [100]
        },
        "[vue]": {
          "editor.rulers": [100]
        },
        "typescript.tsdk": "/workspace/node_modules/typescript/lib",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always"
        },
        "tailwindCSS.classAttributes": ["class", "ui", "active-class", "inactive-class"],
        "tailwindCSS.experimental.classRegex": [
          ["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ]
      },

      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",

        "vue.volar",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",

        "editorconfig.editorconfig",
        "mhutchie.git-graph",
        "eamodio.gitlens"
      ],
      "ignoreExtensions": ["*"]
    }
  }
}
